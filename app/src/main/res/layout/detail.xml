<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:id="@+id/rl1"
        >
        <include layout="@layout/fragment_top_icon"></include>
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/txtBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textSize="18dp"
            android:textColor="@color/blue"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgBack"
            android:layout_marginLeft="8dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_below="@+id/rl1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/image"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Two Dozen Vibrant Birthday Roses"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/bg_home"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Your Item"
                    android:textSize="14dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    >
                    <RadioButton
                        android:id="@+id/rdio_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:onClick="onRadioButtonClickedLarge"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Large"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$34.97"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    >
                    <RadioButton
                        android:id="@+id/rdio_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:onClick="onRadioButtonClickedMedium"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$44.97"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="16dp"
                    >
                    <RadioButton
                        android:id="@+id/rdio_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.05"
                        android:onClick="onRadioButtonClickedSmall"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Small"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.8"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$54.97"
                        android:textSize="14dp"
                        android:layout_marginLeft="8dp"
                        android:textColor="@color/black"
                        android:layout_weight="0.1"
                        />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >
                <ImageView
                    android:id="@+id/imgDes"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:src="@drawable/icon_description"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/imgDes"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="12dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgDes"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:singleLine="false"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:text="Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen Do Hoang Yen "
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/line_button_detail_color"
                    android:text="Birthday"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_marginLeft="8dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/line_button_detail"
                    android:text="Recently Viewed"
                    android:textAllCaps="false"
                    android:textColor="@color/button_detail"
                    android:layout_marginRight="8dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@color/white"
                android:layout_marginTop="12dp"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/view_item"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="8dp"
                    >
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
        </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/button_buy_detail"
            android:text="Buy Now"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textAllCaps="false"
            />
    </LinearLayout>
</RelativeLayout>